<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             x:Class="MEGA_ENCRYPTION_MOBILE.Views.LoadingScreen"
             Title="LoadingScreen">
    <Frame BackgroundColor="Transparent" BorderColor="Transparent" HorizontalOptions="Center">
        <VerticalStackLayout Padding="10" Spacing="10">
            <Label Text="Please wait.." FontAttributes="Bold"/>
            <ActivityIndicator Color="DodgerBlue" HeightRequest="150" WidthRequest="150" IsRunning="True"/>
        </VerticalStackLayout>
    </Frame>
</mauiPopup:BasePopupPage>